/* ------------- MAIN LAYOUT AND STYLES*/
* {
  box-sizing: border-box;
}
a {
  text-decoration: none;
}
body {
  font-family: Arial, Helvetica, sans-serif;
  background: #fff;
}
header {
  z-index: 1;
  width: 100%;
  color: #333;
  background-color: #f8f8f8;
  background-image: url("img/noise.png");
  position: fixed;
  border-bottom: 1px solid #d3d3d3;
}
#spacer {
  height: 48px;
}
#smlogo {
  float: left;
  padding: 2px;
}
#smlogo img {
  padding: 0.2rem;
}
#nav {
  display: block;
  clear: both;
  float: none;
  width: 100%;
  margin-left: auto;
  margin-right: auto;
  position: relative;
  color: #333;
  background-color: #f8f8f8;
  background-image: url("img/noise.png");
  border-right: none;
  transition: all 0.2s ease-in-out;
  text-decoration: none;
}
#nav:first-child {
  margin-left: auto;
}
#nav:last-child {
  margin-right: auto;
}
@media (min-width: 600px) {
  #nav {

*zoom: 1;
float: left;
clear: none;
text-align: inherit;
width: 8.18181818181819%;
margin-left: 0%;
margin-right: 1%;
position: absolute;
height: 100%;
}
#nav ul {
  border-right: 1px solid #d3d3d3;
}
#nav:before,
#nav:after {
  content: '';
  display: table;
}
#nav:after {
  clear: both;
}
#nav:last-child {
  margin-right: 0%;
}
}
@media (min-width: 975px) {
  #nav {
    height: 100%;
    position: absolute;
*zoom: 1;
float: left;
clear: none;
text-align: inherit;
width: 15.833333333333368%;
margin-left: 0%;
margin-right: 1%;
}
#nav:before,
#nav:after {
  content: '';
  display: table;
}
#nav:after {
  clear: both;
}
#nav:last-child {
  margin-right: 0%;
}
}
#nav li a > span {
  display: inline-block;
}
@media (min-width: 600px) {
  #nav li a > span {
    padding-left: 2px;
    display: none;
  }
}
@media (min-width: 980px) {
  #nav li a > span {
    display: inline-block;
  }
}
#nav ul {
  /*display: none;*/
  background-color: #f8f8f8;
  background-image: url("img/noise.png");
}
@media (min-width: 600px) {
  #nav ul {
    display: block;
  }
}

